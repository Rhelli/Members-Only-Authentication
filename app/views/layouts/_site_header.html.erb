<header class="navbar navbar-fixed-top sitewide-nav">
  <div class="container-fluid" >
  <%= link_to "MembersOnly", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if !logged_in? %>
          <li><%= link_to 'Home', root_path %></>
        <% else %>
          <li><%= link_to 'Posts', root_path %></li>
        <% end %>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle profile-dropdown" data-toggle="dropdown"> My Profile <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user, id: "dropdown-link" %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete, id: "dropdown-link" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>